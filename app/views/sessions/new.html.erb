<html>
    <head>
        <title></title>
    </head>
    <body>
    <div class="container">
    <div class="header-container">
        <%= content_tag :h1, "SCM Bulletin Board" %>
    </div>
    <div class="body-container">
        <% if flash[:notice] %>
            <%= content_tag :h2, flash[:notice] %>
        <% else %>
            <%= content_tag :h2, "Login Form" %>
        <% end %>

        <%= form_with url: sessions_path do |f| %>
            <div class="mb-3 row">
                <div class="col-sm-2">
                    <%= f.label :email, class: "form-label" %>
                </div>
                <div class="col-sm-3">
                    <%= f.email_field :email, class: "form-control" %>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-2">
                    <%= f.label :password, class: "form-label" %>
                </div>
                <div class="col-sm-3">
                    <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-2">
                    <%= link_to "Sign Up", new_user_path %>
                </div>
                <div class="col-sm-3">
                    <%= f.submit "Sign In!", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
    </div>
    </div>
    </body>
</html>
