<!DOCTYPE html>
<html>
  <head>
    <title>BulletinBoard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="header"></p>
      <% if current_user %>
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <span class="nav-link header-text">SCM Bulletin Board</span>
                </li>
                <li class="nav-item">
                  <%= link_to "Users", root_path, class: "nav-link text" %>
                </li>
                <li class="nav-item">
                  <%= link_to "User", new_user_path, class:"nav-link text" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Posts", posts_path, class: "nav-link text" %>
                </li>
                <li class="nav-item">
                  <span class="nav-link text"><%= current_user.welcome %></span>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", sessions_destroy_path, method:"delete", class: "nav-link text" %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    
    
    <%= yield %>
  
    <footer>
      <p>@copyright</p>
    </footer>

  </body>
</html>