<html>
    <head>
        <title></title>
    </head>
    <body>
        <div class="inner-container">
            <form>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Name</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.name %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>profile</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.profile  %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Email Address</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.email %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Role</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.role %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Phone</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.phone %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Date of Birth</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.dob.strftime("%d-%m-%Y") %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <label>Address</label>
                    </div>
                    <div class="col-sm-3">
                        <%= @user.address %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-2">
                        <%= form.submit "Confirm", class: "btn btn-primary" %>
                    </div>
                    <div class="col-sm-3">
                        <%= form.submit "Clear", class: "btn btn-primary" %>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>